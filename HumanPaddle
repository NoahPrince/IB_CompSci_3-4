package Pong;

import java.awt.Color;
import java.awt.Graphics;

public class HumanPaddle extends Paddle{
    double y;
    final double gravity = 0.94;
    double yVelocity;
    boolean upAccel;
    boolean downAccel;
    int player;
    int x;
    
    public HumanPaddle(int player){
        upAccel = false;
        downAccel = false;
        y = 210;
        if (player ==1){
            x=20;
        }else{
            x=640;
        }
    }
    public void draw(Graphics g){
        g.setColor(Color.white);
        g.fillRect(x,(int)y,10,80);
    }
    
    public void move(){
        if (upAccel){
            yVelocity -= 2;
        }
        else if (downAccel){
            yVelocity += 2;
        }
        else if (!upAccel && !downAccel){
           // yVelocity += gravity;
        }
        if (yVelocity >= 5){
            yVelocity = 5;
        }
        if (yVelocity <= -5){
            yVelocity = -5;
        }
        
        y += yVelocity;
        
        if (y < 0){
            y = 0;
        } 
        if (y > 420){
            y = 420;
        }
        
    }
    public void setUpAccel(boolean input){
        upAccel = input;
    }
    public void setDownAccel(boolean input){
        downAccel = input;
    }
    public int getY(){
    
    return (int)y;
    }
    
}
